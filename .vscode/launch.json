  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Application",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/build/src/app.js",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Bot",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/build/src/bot/index.js",
      "args": [
        "--subreddits",
        "images",
        "earthporn",
        "--schedule",
        "* * * * *",
        "--insta",
        "username:password",
        "--tags",
        "tag1",
        "tag2",
        "tag3",
        "--explore"
      ],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Api",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/build/src/api/index.js",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    // TEST DEBUGGING
    // -------------------------------------------------------------------------
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Get Image Tests",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "args": [
        "--file",
        "${workspaceFolder}/build/test/bot/tasks/getImageContent.test.js"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
